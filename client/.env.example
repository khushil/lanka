# Development Environment Configuration for LANKA UI
# Copy this file to .env.local and modify values as needed

# Application
REACT_APP_NAME=LANKA
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_URL=http://localhost:4000
REACT_APP_API_VERSION=v1
REACT_APP_GRAPHQL_URL=http://localhost:4000/graphql
REACT_APP_WEBSOCKET_URL=ws://localhost:4000

# Authentication
REACT_APP_AUTH_DOMAIN=localhost
REACT_APP_JWT_ISSUER=lanka-auth
REACT_APP_JWT_AUDIENCE=lanka-client
REACT_APP_SESSION_TIMEOUT=3600000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_COLLABORATION=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_DEVELOPMENT_TOOLS=true
REACT_APP_ENABLE_DEBUG_MODE=true

# Development Tools
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_ENABLE_SERVICE_WORKER=false
REACT_APP_LOG_LEVEL=debug

# Graph Visualization
REACT_APP_MAX_GRAPH_NODES=500
REACT_APP_GRAPH_PERFORMANCE_MODE=false
REACT_APP_ENABLE_3D_GRAPH=true

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md

# Performance
REACT_APP_CACHE_DURATION=3600000

# Third-party Services (Development)
# REACT_APP_SENTRY_DSN=your-development-sentry-dsn
# REACT_APP_GOOGLE_ANALYTICS_ID=your-development-ga-id

# Security (Development - less strict)
REACT_APP_ENABLE_HTTPS_ONLY=false
REACT_APP_TRUSTED_DOMAINS=localhost,127.0.0.1

# Build Configuration
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=true