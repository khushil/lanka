# Production Environment Configuration for LANKA UI

# Application
REACT_APP_NAME=LANKA
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# API Configuration
REACT_APP_API_URL=https://api.lanka.com
REACT_APP_API_VERSION=v1
REACT_APP_GRAPHQL_URL=https://api.lanka.com/graphql
REACT_APP_WEBSOCKET_URL=wss://api.lanka.com

# Authentication
REACT_APP_AUTH_DOMAIN=auth.lanka.com
REACT_APP_JWT_ISSUER=lanka-auth
REACT_APP_JWT_AUDIENCE=lanka-client
REACT_APP_SESSION_TIMEOUT=3600000

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_COLLABORATION=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_DEVELOPMENT_TOOLS=false
REACT_APP_ENABLE_DEBUG_MODE=false

# Third-party Services
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_HOTJAR_ID=your-hotjar-id

# Performance
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_DURATION=86400000

# Graph Visualization
REACT_APP_MAX_GRAPH_NODES=1000
REACT_APP_GRAPH_PERFORMANCE_MODE=true
REACT_APP_ENABLE_3D_GRAPH=false

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md

# Rate Limiting
REACT_APP_API_RATE_LIMIT=100
REACT_APP_API_RATE_WINDOW=60000

# Monitoring
REACT_APP_LOG_LEVEL=error
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# Security
REACT_APP_CSP_NONCE=generated-nonce
REACT_APP_ENABLE_HTTPS_ONLY=true
REACT_APP_TRUSTED_DOMAINS=lanka.com,api.lanka.com

# CDN and Assets
REACT_APP_CDN_URL=https://cdn.lanka.com
REACT_APP_STATIC_URL=https://static.lanka.com

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=8192