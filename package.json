{
  "name": "lanka-platform",
  "version": "1.0.0",
  "description": "Lanka Requirements Management Platform with Memory Optimization",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npm install && npm run setup:cache",
    "setup:cache": "docker-compose -f docker-compose.cache.yml --profile single up -d",
    "setup:cache:cluster": "docker-compose -f docker-compose.cache.yml --profile cluster up -d",
    "cache:start": "docker-compose -f docker-compose.cache.yml --profile single up -d",
    "cache:stop": "docker-compose -f docker-compose.cache.yml down",
    "cache:logs": "docker-compose -f docker-compose.cache.yml logs -f",
    "cache:monitor": "docker-compose -f docker-compose.cache.yml --profile monitoring up -d",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:with-cache": "npm run setup:cache && ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:cache": "jest tests/cache --testTimeout=30000",
    "test:memory-leak": "ts-node tests/memory/memory-leak-test.ts",
    "test:memory-stability": "bash scripts/test-memory-stability.sh",
    "test:contracts": "jest --config=tests/contracts/jest.config.js",
    "test:contracts:graphql": "jest --config=tests/contracts/jest.config.js tests/contracts/graphql",
    "test:contracts:rest": "jest --config=tests/contracts/jest.config.js tests/contracts/rest",
    "test:contracts:websocket": "jest --config=tests/contracts/jest.config.js tests/contracts/websocket",
    "test:contracts:integration": "jest --config=tests/contracts/jest.config.js tests/contracts/integration",
    "test:contracts:performance": "jest --config=tests/contracts/jest.config.js --testNamePattern='performance'",
    "contracts:validate": "npm run test:contracts && npm run contracts:lint && npm run contracts:docs",
    "contracts:lint": "eslint tests/contracts/**/*.ts",
    "contracts:docs": "node scripts/generate-contract-docs.js",
    "contracts:monitor": "node scripts/monitor-contracts.js",
    "contracts:benchmark": "node scripts/benchmark-contracts.js",
    "contracts:complexity-check": "node scripts/check-query-complexity.js",
    "contracts:performance-report": "node scripts/generate-performance-report.js",
    "schema:introspect": "node scripts/introspect-schema.js",
    "schema:docs": "graphql-codegen --config codegen.yml",
    "schema:analyze-changes": "node scripts/analyze-schema-changes.js",
    "api:docs": "swagger-jsdoc -d docs/api/swagger-def.js src/api/**/*.ts -o docs/api/swagger.json",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "memory:monitor": "curl http://localhost:4000/api/memory/stats",
    "memory:gc": "curl -X POST http://localhost:4000/api/memory/gc",
    "memory:snapshot": "curl -X POST http://localhost:4000/api/memory/snapshot",
    "memory:report": "curl http://localhost:4000/api/memory/report"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/exporter-prometheus": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@types/uuid": "^10.0.0",
    "express": "^4.18.0",
    "express-prom-bundle": "^8.0.0",
    "ioredis": "^5.3.0",
    "neo4j-driver": "^5.14.0",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "uuid": "^11.1.0",
    "winston": "^3.10.0",
    "winston-elasticsearch": "^0.19.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@graphql-tools/schema": "^10.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "apollo-server-express": "^3.12.1",
    "graphql": "^16.8.1",
    "graphql-cost-analysis": "^1.0.3",
    "graphql-depth-limit": "^1.1.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^4.0.0",
    "js-yaml": "^4.1.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "requirements-management",
    "memory-optimization",
    "performance",
    "neo4j",
    "streaming"
  ]
}
